<Window x:Class="Aplikacia_Motion_Detect.UI.View.VideoCapture.VideoCaptureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:views="clr-namespace:Aplikacia_Motion_Detect.UI.View.VideoCapture;assembly=Aplikacia_Motion_Detect.UI"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aplikacia_Motion_Detect.UI.View.VideoCapture"
        mc:Ignorable="d"
        Title="VideoCaptureWindow" Height="450" Width="800">
	<Grid>

		<StackPanel>
			<TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" />
			<TextBox HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" />
		</StackPanel>

		<GroupBox Header="Video Source" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100">

			<Grid HorizontalAlignment="Left"  VerticalAlignment="Top">
				<views:IpCameraControl/>
				<views:VideoDeviceControl/>
				<views:VideoFileControl/>
			</Grid>
		</GroupBox>

		<GroupBox Header="Save Output">
			<views:SaveOutputControl/>
		</GroupBox>

	</Grid>
</Window>
