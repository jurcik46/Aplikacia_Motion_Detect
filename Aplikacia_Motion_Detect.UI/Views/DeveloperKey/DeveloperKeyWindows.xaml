<Window x:Class="Aplikacia_Motion_Detect.UI.Views.DeveloperKey.DeveloperKeyWindows"
        x:Name="Win"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aplikacia_Motion_Detect.UI.Views.DeveloperKey"
        mc:Ignorable="d"
        Title="Set Developer Key" Height="150" Width="500" ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Height="23"     Width="428" Text="{Binding DevKey, Mode=TwoWay}"/>

        <Button Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Save"  IsDefault="True" Width="428" Command="{Binding SaveKeyCommand}" CommandParameter="{Binding ElementName=Win}" />
    </Grid>
</Window>
