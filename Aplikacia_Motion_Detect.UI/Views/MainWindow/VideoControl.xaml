<UserControl x:Class="Aplikacia_Motion_Detect.UI.Views.MainWindow.VideoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dtkVideoCapLib="clr-namespace:DTKVideoCapLib;assembly=Interop.DTKVideoCapLib"
             xmlns:wf="clr-namespace:Aplikacia_Motion_Detect.UI.Views.MainWindow"
             mc:Ignorable="d" 
             d:DesignHeight="360" d:DesignWidth="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel x:Name="stack" Grid.Row="2">
            <!--<MediaElement Height="200"/>-->
            <WindowsFormsHost>
                <wf:VideoDisplayControl/>
            </WindowsFormsHost>
        </StackPanel>
        
    </Grid>
</UserControl>
